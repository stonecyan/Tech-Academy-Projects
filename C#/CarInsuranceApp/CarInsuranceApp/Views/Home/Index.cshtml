
<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Input the information to get a quote!</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                <div class="row">
                    <div class="form-group col">
                        <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                    </div>
                    <div class="form-group col">
                        <input name="LastName" type="text" class="form-control no-gutters" placeholder="Last Name" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col no-gutters">
                        <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                    </div>
                    <div class="form-group col no-gutters">
                        <input name="DOB" type="date" class="form-control" placeholder="mm/dd/yyyy" />
                    </div>
                </div>
                <div class="row no-gutters">
                    <div class="form-group col mr-3">
                        <input name="CarYear" type="text" class="form-control" placeholder="Car Year" />
                    </div>
                    <div class="form-group col mr-3">
                        <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                    </div>
                    <div class="form-group col">
                        <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
                    </div>
                </div>
                <div class="row no-gutters">
                    <div class="form-group no-gutters mr-5">
                        <label class="font-weight-bold">Have you ever had a DUI?</label>
                        <input name="DUI" type="text" class="form-control col-6" />
                        <small class="text-muted">Answer yes or no.</small>
                    </div>
                    <div class="form-group no-gutters">
                        <label class="font-weight-bold">How many speeding tickets do you have?</label>
                        <input name="Tickets" type="text" class="form-control col-4" />
                        <small class="text-muted">Input a number.</small>
                    </div>
                </div>
                <div class="row no-gutters">
                    <div class="form-group no-gutters">
                        <label class="font-weight-bold">Do you want full coverage or liability?</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="coverage" id="full" value="full" />
                            <label class="form-check-label" for="coverage1">Full Coverage</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="coverage" id="liability" value="liability" />
                            <label class="form-check-label" for="coverage1">Liability Coverage</label>
                        </div>
                    </div>
                </div>
                <div class="row no-gutters">
                    <button type="submit" class="btn btn-block btn-dark">Submit</button>
                </div>
            }
            @if(ViewBag.flagvalue)
            {
                <div class="card-body">
                    <h3 class="text-center">Your estimated quote is: </h3>
                    <h4 class="text-center">$@ViewBag.quote per month</h4>
                </div>
            }
            
        </div>
    </div>
</div>